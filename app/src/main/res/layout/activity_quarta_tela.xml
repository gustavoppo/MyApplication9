<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gusta.myapplication.QuartaTela">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/qssl"
            android:textSize="20sp"
            android:textColor="@color/botcol"
            android:layout_above="@+id/radioGroup2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:id="@+id/radioGroup2">

            <RadioButton
                android:id="@+id/radioButton12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/bcol"
                android:textColor="@color/botcol"
                android:text="@string/top" />

            <RadioButton
                android:id="@+id/radioButton11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/jg"
                android:textColor="@color/botcol"
                android:buttonTint="@color/bcol"/>

            <RadioButton
                android:id="@+id/radioButton10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Mid"
                android:textColor="@color/botcol"
                android:buttonTint="@color/bcol"/>

            <RadioButton
                android:id="@+id/radioButton9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/adc"
                android:textColor="@color/botcol"
                android:buttonTint="@color/bcol"/>

            <RadioButton
                android:id="@+id/radioButton8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sup"
                android:textColor="@color/botcol"
                android:buttonTint="@color/bcol"/>
        </RadioGroup>

        <Button
            android:id="@+id/next"
            android:layout_width="65dp"
            android:layout_height="53dp"
            android:text="@string/next"
            android:layout_above="@+id/imageView13"
            android:layout_toRightOf="@+id/textView6"
            android:layout_toEndOf="@+id/textView6"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:drawableTint="@color/botcol"/>

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="53dp"
            android:layout_height="63dp"
            app:srcCompat="@drawable/mid"
            android:layout_marginRight="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="166dp"
            android:layout_alignBottom="@+id/radioGroup2"
            android:layout_alignRight="@+id/button2"
            android:layout_alignEnd="@+id/button2" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="53dp"
            android:layout_height="53dp"
            app:srcCompat="@drawable/jg"
            android:layout_above="@+id/imageView11"
            android:layout_alignLeft="@+id/imageView11"
            android:layout_alignStart="@+id/imageView11"
            android:layout_marginBottom="26dp" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="53dp"
            android:layout_height="53dp"
            app:srcCompat="@drawable/sop"
            tools:layout_editor_absoluteX="137dp"
            tools:layout_editor_absoluteY="-63dp"
            android:layout_alignBottom="@+id/radioGroup2"
            android:layout_alignLeft="@+id/imageView11"
            android:layout_alignStart="@+id/imageView11"
            android:layout_marginBottom="12dp" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="53dp"
            android:layout_height="53dp"
            app:srcCompat="@drawable/top"
            android:layout_alignTop="@+id/radioGroup2"
            android:layout_alignLeft="@+id/imageView12"
            android:layout_alignStart="@+id/imageView12"
            android:layout_marginTop="12dp" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="53dp"
            android:layout_height="53dp"
            app:srcCompat="@drawable/bot"
            android:layout_above="@+id/imageView14"
            android:layout_alignLeft="@+id/imageView11"
            android:layout_alignStart="@+id/imageView11"
            android:layout_marginBottom="24dp" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="53dp"
            android:layout_height="53dp"
            app:srcCompat="@drawable/zx"
            android:layout_above="@+id/radioGroup2"
            android:layout_alignLeft="@+id/radioGroup2"
            android:layout_alignStart="@+id/radioGroup2" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
